<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="naruto_offer_tree" model="ir.ui.view">
        <field name="name">naruto.offer.tree</field>
        <field name="model">naruto.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Property offer">
               <field name="price"/>
               <field name="partner_id"/>
               <field name="validity"/>
               <field name="date_deadline"/>
               <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="naruto_offer_form" model="ir.ui.view">
        <field name="name">naruto.offer.form</field>
        <field name="model">naruto.property.offer</field>
        <field name="arch" type="xml">
            <form string="Property offer">
            	<sheet>
            		<group>
		               <field name="price" string="Price"/>
		               <field name="partner_id" string="Partner"/>
		               <field name="validity" string="Validity"/>
		               <field name="date_deadline" string="Deadline"/>
		               <field name="status" string="Status"/>
		            </group>
	            </sheet>	
            </form>
        </field>
    </record>

</odoo>